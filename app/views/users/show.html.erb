


<div class="card bg-light mb-3" position= "center"style="max-width: 30rem;">
  <h1 class="card-header">Profil</h1>
  <div class="card-body">
	  	<h3> <%=current_user.first_name%></h3> 
		<h3> <%=current_user.last_name%></h3>
		<h4> <%=current_user.description%></h4>
		<h4> <%=current_user.email%></h4>


		<%=link_to "Edit profil", edit_user_path%>

		<% e = Event.where(admin: current_user) %>
		<% if (e != nil)%>
			<h4>Liste d'evenements</h4>
			 <% e.each do |v| %>
			 	<h3> <%= link_to "#{v.title }", event_path(v.id) %> </h3>
			 	<small> v.description </small>
				</br>
			 <%end%>
		<%end%>
 </div>
</div>





